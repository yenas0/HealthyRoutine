<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PostWriteActivity">

    <!-- 상단바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="뒤로가기"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시글 작성"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 게시글 작성 내용 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:hint="제목"
            android:maxLength="15"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/content_edit_text"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="내용을 입력해주세요."
            android:background="@drawable/rounded_edittext_big"
            android:padding="12dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLength="50"
            android:lines="5"
            android:scrollHorizontally="false" />
    </LinearLayout>

    <!-- 루틴 설정 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="루틴 설정"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <Switch
            android:id="@+id/routine_switch"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:checked="true" />
    </LinearLayout>

    <!-- 루틴 이름 -->
    <LinearLayout
        android:id="@+id/routine_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="루틴 이름"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/routine_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:hint="루틴 이름"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반복 주기"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/day_mon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="월"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/circle_background_inactive"
                android:gravity="center"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/day_tue"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="화"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/circle_background_inactive"
                android:gravity="center"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/day_wed"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="수"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/circle_background_inactive"
                android:gravity="center"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/day_thu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="목"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/circle_background_inactive"
                android:gravity="center"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/day_fri"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="금"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/circle_background_inactive"
                android:gravity="center"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/day_sat"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="토"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/circle_background_inactive"
                android:gravity="center"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/day_sun"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="일"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/circle_background_inactive"
                android:gravity="center"
                android:layout_marginEnd="4dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- 게시글 작성 버튼 -->
    <Button
        android:id="@+id/btn_submit_post"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="게시글 작성"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:gravity="center" />
</LinearLayout>
